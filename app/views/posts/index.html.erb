<h1>All posts</h1>
<ul>
    <% @posts.each do |post| %>
        <li>
            <%= link_to post.fullpost, posts_path(id: post.id) %>
            <%= link_to "Edit", edit_post_path(id: post.id) %>
            <%= link_to "Delete", post_path(id: post.id), method: :delete, data: { confirm: 'Jestes pewien?'} %>
        </li>
    <% end %>
</ul>